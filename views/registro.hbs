<body>
                {{#if status}}
                <h5 class="text-center text-success mt-3">{{message}}</h5>
                {{else}}
                <h5 class="text-center text-danger mt-3">{{message}}</h5>
                {{/if}}
   <div class="container col-5 margin bg-light">
        <form action="/registro" method="post" class="row">
                <div class="form-group col-6">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" autofocus placeholder="nombre" id="nombre" name="nombre">
                </div>
                <div class="form-group col-6">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control" placeholder="apellido" id="apellido" name="apellido">
                </div> 
                <div class="form-group col-12">
                    <label for="correo">Correo</label>
                    <input type="correo" class="form-control" placeholder="nombre@hotmail.com" id="correo" name="mail">
                </div>
                <div class="form-group col-12">
                    <label for="telefono">Telefono</label>
                    <input type="text" class="form-control" placeholder="Contraseña" name="telefono">
                </div>
                <div class="form-group col-12">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" placeholder="Contraseña" id="pw1">
                </div>
                <div class="form-group col-12">
                    <label for="password2">Repetir Contraseña</label>
                    <input type="password" class="form-control " placeholder="Contraseña" id="pw2" onkeyup="comparar()" name="password">
                </div>
                <div class="col-12 d-flex justify-content-center"><spam id="pwds"></spam></div>
                <div class="form-group col-12">
                    <label for="fecha">Fecha de nacimiento</label>
                    <input type="date" class="form-control " id="pw2 fecha" onkeyup="comparar()" name="fecha">
                </div>
                <div class="col-12 d-flex justify-content-center"><samp id="pwds"></samp></div> 
                <div class="form-check mb-4 col-12 d-flex justify-content-center">
                    <label class="form-check-label d-flex ">
                    <input type="checkbox" name="terminos" id="terminos" class="form-chek-input mr-2">Acepto Terminos y Condiciones.
                    </label>
                </div>
            <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
        
        </form>
        </div>
    </div> 

<script src="/javascripts/botones.js"></script>
</body>       